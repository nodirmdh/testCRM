generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  ADMIN
}

enum UserStatus {
  ACTIVE
  DISABLED
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELED
}

enum StudentStatus {
  ACTIVE
  ARCHIVED
}

enum GroupStatus {
  ACTIVE
  PLANNED
  ARCHIVED
}

enum TeacherGroupRole {
  LEAD
  ASSISTANT
}

enum LessonStatus {
  PLANNED
  COMPLETED
  CANCELED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

model Organization {
  id            String         @id @default(uuid())
  name          String
  timezone      String?
  status        String          @default("ACTIVE")
  subscriptions Subscription[]
  users         User[]
  students      Student[]
  teachers      Teacher[]
  courses       Course[]
  groups        Group[]
  enrollments   Enrollment[]
  teacherGroups TeacherGroup[]
  lessons       LessonSession[]
  attendance    Attendance[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Subscription {
  id             String             @id @default(uuid())
  organizationId String
  planCode       String
  status         SubscriptionStatus @default(ACTIVE)
  startedAt      DateTime           @default(now())
  endsAt         DateTime?
  organization   Organization       @relation(fields: [organizationId], references: [id])
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  @@index([organizationId])
}

model User {
  id               String     @id @default(uuid())
  organizationId   String
  email            String
  passwordHash     String
  role             UserRole   @default(ADMIN)
  status           UserStatus @default(ACTIVE)
  refreshTokenHash String?
  organization     Organization @relation(fields: [organizationId], references: [id])
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  @@unique([organizationId, email])
  @@index([organizationId])
}

model Student {
  id             String        @id @default(uuid())
  organizationId String
  fullName       String
  birthDate      DateTime?
  status         StudentStatus @default(ACTIVE)
  organization   Organization  @relation(fields: [organizationId], references: [id])
  enrollments    Enrollment[]
  attendance     Attendance[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([organizationId])
}

model Teacher {
  id             String        @id @default(uuid())
  organizationId String
  fullName       String
  phone          String
  specialization String?
  isActive       Boolean       @default(true)
  note           String?
  organization   Organization  @relation(fields: [organizationId], references: [id])
  teacherGroups  TeacherGroup[]
  lessons        LessonSession[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([organizationId])
}

model Course {
  id             String        @id @default(uuid())
  organizationId String
  name           String
  description    String?
  durationMonths Int?
  isActive       Boolean       @default(true)
  organization   Organization  @relation(fields: [organizationId], references: [id])
  groups         Group[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([organizationId])
}

model Group {
  id             String        @id @default(uuid())
  organizationId String
  courseId       String
  name           String
  scheduleText   String
  startDate      DateTime?
  endDate        DateTime?
  status         GroupStatus   @default(ACTIVE)
  organization   Organization  @relation(fields: [organizationId], references: [id])
  course         Course        @relation(fields: [courseId], references: [id])
  enrollments    Enrollment[]
  teacherGroups  TeacherGroup[]
  lessons        LessonSession[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([organizationId])
  @@index([courseId])
}

model Enrollment {
  id             String        @id @default(uuid())
  organizationId String
  studentId      String
  groupId        String
  joinedAt       DateTime      @default(now())
  leftAt         DateTime?
  organization   Organization  @relation(fields: [organizationId], references: [id])
  student        Student       @relation(fields: [studentId], references: [id])
  group          Group         @relation(fields: [groupId], references: [id])
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([organizationId])
  @@index([studentId])
  @@index([groupId])
  @@index([studentId, groupId, leftAt])
}

model TeacherGroup {
  id             String           @id @default(uuid())
  organizationId String
  teacherId      String
  groupId        String
  role           TeacherGroupRole @default(LEAD)
  organization   Organization     @relation(fields: [organizationId], references: [id])
  teacher        Teacher          @relation(fields: [teacherId], references: [id])
  group          Group            @relation(fields: [groupId], references: [id])
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@unique([teacherId, groupId])
  @@index([organizationId])
  @@index([teacherId])
  @@index([groupId])
}

model LessonSession {
  id             String        @id @default(uuid())
  organizationId String
  groupId        String
  teacherId      String
  date           DateTime
  topic          String?
  notes          String?
  status         LessonStatus  @default(PLANNED)
  organization   Organization  @relation(fields: [organizationId], references: [id])
  group          Group         @relation(fields: [groupId], references: [id])
  teacher        Teacher       @relation(fields: [teacherId], references: [id])
  attendance     Attendance[]
  createdAt      DateTime      @default(now())

  @@index([organizationId])
  @@index([groupId])
  @@index([teacherId])
}

model Attendance {
  id              String           @id @default(uuid())
  organizationId  String
  lessonSessionId String
  studentId       String
  status          AttendanceStatus
  comment         String?
  organization    Organization     @relation(fields: [organizationId], references: [id])
  lessonSession   LessonSession    @relation(fields: [lessonSessionId], references: [id])
  student         Student          @relation(fields: [studentId], references: [id])
  createdAt       DateTime         @default(now())

  @@unique([lessonSessionId, studentId])
  @@index([organizationId])
  @@index([lessonSessionId])
  @@index([studentId])
}
